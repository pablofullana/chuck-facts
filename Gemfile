source 'https://rubygems.org'

ruby "2.2.3"

# Sinatra framework
gem 'sinatra', '~> 1.4'

# Funny HTTP
gem 'httparty', '~> 0.13.7'

# JSON stuff
gem 'json', '~> 1.8.3'

# Slim as template engine
gem 'slim', '~> 3.0.6'

group :development do
  # Avoid having to reload the server
  gem 'sinatra-reloader', '~> 1.0'
end
